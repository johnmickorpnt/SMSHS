<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CourseFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/homeBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/courseIntroContainer"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp">

            <RelativeLayout
                android:id="@+id/homeViewBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C8C7C7"
                android:padding="20dp">

                <TextView
                    android:id="@+id/dept_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="STEM"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dept_label"
                    android:text="Department" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/courseIntroContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_200"
            android:backgroundTint="@color/teal_700"
            android:foregroundTint="#FF1515"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/mainCourseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backBtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Multimedia"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/code_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainCourseTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="WATP"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <Button
                android:id="@+id/backBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/baseline_arrow_back_24"
                android:backgroundTint="#FF0404" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeBtn"
            android:padding="15dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:background="#FFFFFF"
                android:text="@string/large_text" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>